{
	"extends": "@sindresorhus/tsconfig",
	"include": ["source", "test"],
	"compilerOptions": {
		"esModuleInterop": true,
		"declaration": false,
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"target": "es2019",
		"skipLibCheck": false,
		"noEmitOnError": true,
		"baseUrl": "./",
		"incremental": false,
		"preserveConstEnums": true,
		"resolveJsonModule": true,
		"typeRoots": ["node_modules/@types", "typings"]
	}
}
