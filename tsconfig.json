{
  "include": ["src", "test"],
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "target": "es2019",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "baseUrl": "./",
    "incremental": false,
    "preserveConstEnums": true,
    "typeRoots": ["node_modules/@types", "typings"],
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  }
}
